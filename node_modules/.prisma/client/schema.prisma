datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  RECEPCIONISTA
  ALUNO
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  role      Role     @default(ALUNO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
